<!-- This code allows a the below code to be added to the body of ANY page
     It is 'called' using the  render 'layouts/form'  line in the ANY *.html.erb file  -->

<% if @todo.errors.any? %>
  <p>This following errors prevented the todo from being saved</p>
  <ul>
    <% @todo.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @todo do |f| %>

  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </p>
  
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to "Back to todos listing", todos_path %>